{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/sanity-config/src/lib/env.ts",
    "../../packages/sanity-config/src/lib/image.ts",
    "../../packages/sanity-config/src/lib/live.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  }
}
